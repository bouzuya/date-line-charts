{
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "terraform.languageServer": {
          "enabled": true
        }
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest",
      "tflint": "latest",
      "terragrunt": "latest"
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest"
    }
  },
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-22.04",
  "name": "terraform"
}
